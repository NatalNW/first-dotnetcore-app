@page
@model FilmesCRUDRazor.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <p>
                <a class="btn btn-primary" asp-page="Create">
                    <span class="material-icons">add_circle_outline</span> New Movie
                </a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Movie[0].Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Movie[0].Genre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Movie[0].Price)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Movie)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Genre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.MovieID"><span class="material-icons">edit</span></a>
                                    <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.MovieID"><span class="material-icons">info</span></a>
                                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.MovieID"><span class="material-icons">delete</span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
